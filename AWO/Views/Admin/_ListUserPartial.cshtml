@model UserListViewModel

<div class="card border-0 w-100">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h4 class="card-title"> Manage Users</h4>
            </div>
            <div class="col-6 text-right p-2">
                <button class="btn btn-warning"> Add new user</button>
            </div>
        </div>
            <table class="table table-striped table-light table-primary">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <form method="post" asp-action="DeleteUser" asp-controller="Admin">

                                    <button type="submit" class="btn btn-sm btn-warning rounded-right">
                                        <i class="fas fa-edit"></i>
                                        <span>Edit</span>
                                    </button>

                                </form>
                            </td>
                            <td>
                                <a href="#" class="btn btn-sm btn-danger">
                                    <i class="far fa-trash-alt"></i>
                                    <span> Delete </span>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }


                </tbody>
            </table>
    </div>
</div>

