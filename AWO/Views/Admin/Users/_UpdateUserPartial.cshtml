@model UpdateUserViewModel

@{
    ViewData["Header"] = "Create User";
}

<div class="modal fade" id="updateUserModal" role="dialog" aria-hidden="false">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update User</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="UpdateUser" asp-controller="Admin">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="UserId" class="form-control"/>
                    <div class="d-flex row">
                        <div class="form-group">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="User name" />
                            <span asp-validation-for="UserName" class="text-danger border-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="email for login" />
                            <span asp-validation-for="Email" class="text-danger border-danger"></span>


                            <div class="form-group mb-3">
                                <select class="form-control custom-select" asp-for="RoleName" asp-items="@Model.Roles"></select>
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group-row">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary" id="updateUser"> update user </button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



