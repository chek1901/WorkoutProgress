@model LoginViewModel

@{
    ViewData["Title"] = "Login page";
}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="section-header">
                    <h1 class="text-center"> Login </h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="text-center">
                    <img id="login-profile-img" class="rounded-circle profile-img-card" src="https://i.imgur.com/6b6psnA.png" />
                    <p id="profile-name" class="profile-name-card"></p>
                    <form method="post" class="form-signin">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group row justify-content-center">
                            <div class="col col-md-8 col-sm-8 col-xs-8">
                                <input asp-for="UserName" class="form-control form-group" placeholder="Username" required autofocus>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group row justify-content-center">

                            <div class="col col-md-8 col-sm-8 col-xs-8">

                                <input asp-for="Password" class="form-control form-group" placeholder="Password" required autofocus
                                       type="password" name="password" id="inputPassword">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">

                            <div class="col col-md-8 col-sm-8 col-xs-8">
                                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Login</button>
                            </div>
                        </div>
                    </form>

                    <div class="form-group row justify-content-center m-2">
                        <div class="col col-sm-5">

                            <h5> Not a member yet?</h5>
                            <a href="#" class="btn btn-sm btn-outline-dark"> Register </a>
                            <!-- /form -->
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>

